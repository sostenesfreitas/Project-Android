<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_layout_container"
    android:padding="8dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:paddingBottom="4dp"
                android:paddingTop="15dp"
                android:text="@string/name"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/continent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/rank"
                android:layout_below="@+id/country"
                android:layout_alignLeft="@+id/country"
                android:layout_alignStart="@+id/country"
                android:paddingLeft="0dp" />

            <TextView
                android:id="@+id/capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/rankOff"
                android:layout_below="@+id/continent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:background="@mipmap/ic_poke"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rankDef"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:paddingTop="4dp"
                android:paddingLeft="0dp"
                android:layout_below="@+id/capital"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textRankOff"
                android:layout_below="@+id/continent"
                android:layout_toRightOf="@+id/country"
                android:layout_toEndOf="@+id/country"
                android:paddingTop="4dp"
                android:paddingLeft="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textRankDef"
                android:paddingTop="4dp"
                android:paddingLeft="5dp"
                android:layout_alignTop="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textName"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:layout_above="@+id/continent"
                android:layout_toRightOf="@+id/capital"
                android:layout_toEndOf="@+id/capital" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>